{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "target": "ES2022",
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules",
      "**/node_modules/*"
    ]
  }
  