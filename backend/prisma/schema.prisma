
datasource db {
  provider = "postgresql"
   url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id        Int   @id @default(autoincrement())
  title     String
  author    String
  category  String
  synopsis  String

  liker     Int      @default(0)
  stars     Int      @default(0)

  status    String   @default("Dispon√≠vel")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
