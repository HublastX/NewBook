{
    "deleteBook":{
        "delete": {
            "summary": "Delete Book",
            "description": "This route is responsible for deleting entries from a book.",
            "tags": ["Book"],
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the book to be deleted",
                    "schema": {
                        "type": "string",
                        "example": "1"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "Book deleted successfully",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "message": {
                                        "type": "string",
                                        "example": "Livro deletado com sucesso"
                                    }
                                }
                            }
                        }
                    }
                },
                "400": {
                    "description": "Invalid ID",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "message": {
                                        "type": "string",
                                        "example": "ID inválido"
                                    },
                                    "errors": {
                                        "type": "array",
                                        "items": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "404": {
                    "description": "Book not found",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "message": {
                                        "type": "string",
                                        "example": "Livro não encontrado"
                                    }
                                }
                            }
                        }
                    }
                },
                "500": {
                    "description": "Internal server error",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "message": {
                                        "type": "string",
                                        "example": "Error ao deletar"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}